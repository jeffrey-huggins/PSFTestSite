@model AtriumWebApp.Models.Budget.ViewModels.MainFormViewModel

    Census GL Account
<br />
<div id="censusAccount" style="border:solid thin black;min-height:510px;">
    @{
        var budgetCensus = Model.Census.Where(a => a.BudgetID == Model.FacilityBudget.BudgetID);
        var censusLedgers = budgetCensus.Select(a => a.GeneralLedger).Distinct().OrderBy(b => b.GLAccountNb).ToList();
    }

    <div id="editCensus">

    </div>
    <div class="recordSelection">
        Record: <i class="fa fa-fast-backward selector" id="censusLedgerFirst"></i>
        <i class="fa fa-backward selector" aria-hidden="true" id="censusLedgerBack"></i>
        <input id="censusLedgerSelector" />
        <i class="fa fa-forward selector" aria-hidden="true" id="censusLedgerForward"></i>
        <i class="fa fa-fast-forward selector" aria-hidden="true" id="censusLedgerLast"></i>
        <i class="fa fa-plus selector" aria-hidden="true" id="newCensusLedger" style="color:green"></i>
        <i class="fa fa-times selector" aria-hidden="true" id="deleteCensusLedger" style="color:red;"></i>
        <select id="glAccountID" class="glDropdown">
            @for (int i = 0; i < censusLedgers.Count; i++)
            {
                var ledger = censusLedgers[i];
                @:
                <option value="@ledger.GLAccountIndex" rowNum="@(i + 1)">@ledger.DisplayName</option>
            }
        </select>

    </div>
</div>