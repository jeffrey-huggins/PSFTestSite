@model AtriumWebApp.Models.Budget.ViewModels.MainFormViewModel

Other Revenue GL Account
<br />
<div id="otherRevenueAccount" style="border:solid thin black;min-height:510px;">
    @{
        var otherRevenue = Model.OtherRevenue.Where(a => a.BudgetID == Model.FacilityBudget.BudgetID);
        var otherRevenueLedgers = otherRevenue.Select(a => a.GeneralLedger).Distinct().OrderBy(b => b.GLAccountNb).ToList();
    }
    <div id="editOtherRevenue">

    </div>


    <div class="recordSelection">
        Record: <i class="fa fa-fast-backward selector" id="otherRevenueFirst"></i>
        <i class="fa fa-backward selector" aria-hidden="true" id="otherRevenueBack"></i>
        <input id="otherRevenueSelector" />
        <i class="fa fa-forward selector" aria-hidden="true" id="otherRevenueForward"></i>
        <i class="fa fa-fast-forward selector" aria-hidden="true" id="otherRevenueLast"></i>
        <i class="fa fa-plus selector" aria-hidden="true" id="newOtherRevenue" style="color:green"></i>
        <i class="fa fa-times selector" aria-hidden="true" id="deleteOtherRevenue" style="color:red;"></i>
        <select id="otherRevenueID" class="glDropdown">
            @for (int i = 0; i < otherRevenueLedgers.Count; i++)
            {
                var ledger = otherRevenueLedgers[i];
                @:
                <option value="@ledger.GLAccountIndex" rowNum="@(i + 1)">@ledger.DisplayName</option>
            }
        </select>

    </div>
</div>