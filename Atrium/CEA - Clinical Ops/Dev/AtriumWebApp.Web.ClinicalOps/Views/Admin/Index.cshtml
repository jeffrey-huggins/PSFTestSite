@model AtriumWebApp.Web.ClinicalOps.Models.ViewModel.AdminHomeViewModel
@{
    ViewBag.Title = "Admin Page";
}

<div class="float-left">
    <div class="container_12">
        <div class="grid_2 bold">Server Name:</div>
        <div class="grid_2">@Model.ServerName</div>
    </div>
    <div class="container_12">
        <div class="grid_2 bold">Database Name:</div>
        <div class="grid_2">@Model.DatabaseName</div>
    </div>

    <ul id="admin-links">
        @if (Model.HomeViewModel.HasAccessTo("SOC"))
        {
            <li><a href="~/StandardsOfCareAdmin/">Standards of Care Admin Page</a>
                <ul>
                    <li><a href="~/StandardsOfCareWoundsAdmin/">SOC Wound Admin Page</a></li>
                    <li><a href="~/StandardsOfCareFallAdmin/">SOC Fall Admin Page</a></li>
                    <li><a href="~/StandardsOfCareAntiPsychoticAdmin/">SOC AntiPsychotic Admin Page</a></li>
                    <li><a href="~/StandardsOfCareRestraintAdmin/">SOC Restraint Admin Page</a></li>
                    <li><a href="~/StandardsOfCareCatheterAdmin/">SOC Catheter Admin Page</a></li>
                </ul>
            </li>
        }
        @if (Model.HomeViewModel.HasAccessTo("ITR"))
        {
            <li><a href="~/IncidentTrackingAdmin/">Incident Tracking Admin Page</a></li>
        }
        @if (Model.HomeViewModel.HasAccessTo("HOD"))
        {
            <li><a href="~/HospitalDischargeAdmin/">Hospital Discharge Admin Page</a></li>
        }
        @if (Model.HomeViewModel.HasAccessTo("IFC"))
        {
            <li><a href="~/InfectionControlAdmin/">Resident Infection Control Admin Page</a></li>
        }
        @if (Model.HomeViewModel.HasAccessTo("VAC"))
        {
            <li><a href="~/VaccinationAdmin/">Vaccination Admin Page</a></li>
        }
        @if (Model.HomeViewModel.HasAccessTo("CCA"))
        {
            <li><a href="~/CCAAttendanceAdmin/">Care Conference Attendance Admin Page</a></li>
        }
    </ul>
</div>

