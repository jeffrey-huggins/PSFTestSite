@model AtriumWebApp.Web.ClinicalOps.Models.ViewModel.EmployeeVaccinationAdminViewModel
@{
    ViewBag.Title = "Employee Vaccination Admin Page";
}
<h2 id="title" style="margin-left: 200px">Employee Vaccination Admin Page</h2>

@using (Html.BeginForm("SaveLookback", "EmployeeVaccinationAdmin", FormMethod.Post, new { id = "SaveLookback" }))
            {
    <table>
        <thead>
            <tr style="font-weight: bold">
                <th>Lookback Days</th>
            </tr>
        </thead>
        <tr>
            <td>@Html.Label("Adjust Lookback Days:")</td>
            @{
                string lookbackDays;
                Context.Session.TryGetObject("EVACLookbackDays", out lookbackDays);
            }

            <td>@Html.TextBox("LookbackDays", lookbackDays)</td>
            <td><input id="submit" name="submit" type="submit" value="Update" /></td>
        </tr>
    </table>
                }
<div id="tabs" style="min-height:500px;">
    <ul>
        <li>
            <a href="#communities">Communities</a>
        </li>
    </ul>

    <div id="admin-body">
        <div id="communities">

            <div id="CommunityTableWrapper">
                <table id="CommunityTable">
                    <thead>
                        <tr>
                            <th>Facility</th>
                            <th>State</th>
                            <th>Region</th>
                            <th>Use in Display</th>
                            <th>Report Flag</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var com in Model.AdminViewModel.Communities.OrderByDescending(c => c.IsCommunityFlg).ThenBy(c => c.CommunityShortName))
                        {
                            <tr id="@com.CommunityId">
                                <td>@com.CommunityShortName</td>
                                <td>@com.StateCd</td>
                                <td>@Model.AdminViewModel.Regions.Single(r => r.RegionId == com.RegionId).RegionName</td>
                                <td>@Html.CheckBoxFor(x => x.AdminViewModel.ApplicationCommunityInfos.Single(aci => aci.CommunityId == com.CommunityId).DataEntryFlg, new { id = com.CommunityId, @class = "checkbox" })</td>
                                <td>@Html.CheckBoxFor(x => x.AdminViewModel.ApplicationCommunityInfos.Single(aci => aci.CommunityId == com.CommunityId).ReportFlg, new { id = com.CommunityId, @class = "checkboxReport" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<environment names="Development">
    <script src="~/js/EmployeeVaccinationAdmin.js" asp-append-version="true"></script>
</environment>
<environment names="Testing,Production,Training">
    <script src="~/js/EmployeeVaccinationAdmin.min.js" asp-append-version="true"></script>
</environment>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

