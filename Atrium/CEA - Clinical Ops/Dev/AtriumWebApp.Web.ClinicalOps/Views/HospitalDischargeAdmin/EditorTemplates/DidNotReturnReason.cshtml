@model DidNotReturnReason

@if(Model.DidNotReturnReasonId == 0)
{
    Model.DataEntryFlg = true;

}

<form asp-action="NewDNRR" asp-controller="HospitalDischargeAdmin">
    <input asp-for="DidNotReturnReasonDesc" placeholder="Reason Description" />
    <span asp-validation-for="DidNotReturnReasonDesc" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>