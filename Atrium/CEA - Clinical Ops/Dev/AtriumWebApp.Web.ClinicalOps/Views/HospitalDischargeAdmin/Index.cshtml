@model HospitalDischargeAdminViewModel
@using AtriumWebApp.Web.Base.Library
@{
    ViewBag.Title = "Hospital Discharge Admin";
}


<h2 id="title" style="margin-left: 200px">Hospital Discharge Admin Page</h2>
@using (Html.BeginForm("SaveLookback", "HospitalDischargeAdmin", FormMethod.Post, new { id = "SaveLookback" }))
{
    <table>
        <thead>
            <tr style="font-weight: bold">
                <th>Lookback Days</th>
            </tr>
        </thead>
        <tr>
            <td>@Html.Label("Adjust Lookback Days:")</td>
            @{
                string lookbackDays;
                Context.Session.TryGetObject("HODLookbackDays", out lookbackDays);
            }

            <td>@Html.TextBox("LookbackDays", lookbackDays)</td>
            <td>
                <input id="submit" name="submit" type="submit" value="Update" />
            </td>
        </tr>
    </table>
                }
<div id="tabs" style="min-height:500px">
    <ul class="adminTabNav">
        <li><a href="#Facility">Communities</a></li>
        <li><a href="#Discharge">Discharge Reasons</a></li>
        <li><a href="#Return">Did Not Return Reasons</a></li>
        <li><a href="#Hospital">Hospital</a></li>
    </ul>
    <div id="Discharge">
        <div id="admin-body">
            <table id="DischargeReasons">
                <thead>
                    <tr style="font-weight: bold">
                        <th>Discharge Reason</th>
                        <th>Sort Order</th>
                        <th>ER Enable/Disable</th>
                        <th>Hospital Enable/Disable</th>
                        <th>Report Flag</th>
                        <th>Top_N</th>
                        <th>Edit</th>
                        <th>@*Delete*@</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reason in Model.DischargeReasons)
                    {
                        <tr id="@reason.DischargeReasonId">
                            <td>@reason.DischargeReasonDesc</td>
                            <td>@reason.SortOrder</td>
                            <td>@Html.CheckBox("EREnableDisable", reason.ERDataEntryFlg, new { @class = "EnableDisable ER" })</td>
                            <td>@Html.CheckBox("HospitalEnableDisable", reason.HospitalDataEntryFlg, new { @class = "EnableDisable Hospital" })</td>
                            <td>@Html.CheckBox("ReportFlg", reason.ReportFlg, new { @class = "ReportFlg" })</td>
                            <td>@Html.CheckBox("TopN", reason.Top_N, new { @class = "TopN" })</td>
                            @if (reason.DischargeReasonId > 0)
                            {
                                <td><a class="edit" href="">Edit</a></td>
                                <td>@*<a class="delete" href="">Delete</a>*@</td>
                            }
                            else
                            {
                                <td></td>
                                <td></td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
            @Html.EditorFor(a => a.NewDischarge)
        </div>
    </div>
    <div id="Return">
        <table id="DidNotReturnReasons">
            <thead>
                <tr class="bold">
                    <th>Did Not Return Reason</th>
                    <th>Sort Order</th>
                    <th>Enable Disable</th>
                    <th>Edit</th>
                    <th>@*Delete*@</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dnrr in Model.DidNotReturnReasons)
                {
                    <tr id="@dnrr.DidNotReturnReasonId">
                        <td>@dnrr.DidNotReturnReasonDesc</td>
                        <td>@dnrr.SortOrder</td>
                        <td>@Html.CheckBox("EnableDisable", dnrr.DataEntryFlg, new { @class = "EnableDisable" })</td>
                        @if (dnrr.DidNotReturnReasonId > 0)
                        {
                            <td><a class="edit" href="">Edit</a></td>
                            <td>@*<a class="delete" href="">Delete</a>*@</td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        @Html.EditorFor(a => a.NewDNRR)
    </div>
    <div id="Hospital">
        <table id="Hospitals">
            <thead>
                <tr class="bold">
                    <th>Hospital</th>
                    <th>Sort Order</th>
                    <th>Enable Disable</th>
                    <th>Report Flag</th>
                    <th>Edit</th>
                    <th>@*Delete*@</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hospital in Model.Hospitals)
                {
                    <tr id="@hospital.Id">
                        <td>@hospital.Name</td>
                        <td>@hospital.SortOrder</td>
                        <td>@Html.CheckBox("EnableDisable", hospital.AllowDataEntry, new { @class = "EnableDisable" })</td>
                        <td>@Html.CheckBox("EnableDisable", hospital.AllowReporting, new { @class = "ReportFlg" })</td>
                        @if (hospital.Id > 0)
                        {
                            <td><a class="edit" href="">Edit</a></td>
                            <td>@*<a class="delete" href="">Delete</a>*@</td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        @Html.EditorFor(a => a.NewHospital)
    </div>
    <div id="Facility">
        <div id="CommunityTableWrapper">
            <table id="CommunityTable">
                <thead>
                    <tr>
                        <th>Facility</th>
                        <th>State</th>
                        <th>Region</th>
                        <th>Use in Display</th>
                        <th>Report Flag</th>
                        @foreach (var payer in Model.PayerGroups)
                        {
                            <th>@payer.AtriumPayerGroupCode</th>
                        }
                        <th>Hospitals</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var com in Model.AdminViewModel.Communities.OrderByDescending(c => c.IsCommunityFlg).ThenBy(c => c.CommunityShortName))
            {
                        <tr id="@com.CommunityId">
                            <td>@com.CommunityShortName</td>
                            <td>@com.StateCd</td>
                            <td>@Model.AdminViewModel.Regions.Single(r => r.RegionId == com.RegionId).RegionName</td>
                            <td>@Html.CheckBoxFor(x => x.AdminViewModel.ApplicationCommunityInfos.Single(aci => aci.CommunityId == com.CommunityId).DataEntryFlg, new { id = com.CommunityId, @class = "checkbox" })</td>
                            <td>@Html.CheckBoxFor(x => x.AdminViewModel.ApplicationCommunityInfos.Single(aci => aci.CommunityId == com.CommunityId).ReportFlg, new { id = com.CommunityId, @class = "checkboxReport" })</td>
                            @foreach (var payer in Model.PayerGroups)
                            {
                                if (Model.CommunityPayerGroupInfo.Any(c => c.AtriumPayerGroupCode == payer.AtriumPayerGroupCode && c.CommunityId == com.CommunityId))
                                {
                                    <td>@Html.CheckBox(payer.AtriumPayerGroupCode, Model.CommunityPayerGroupInfo.Single(c => c.AtriumPayerGroupCode == payer.AtriumPayerGroupCode && c.CommunityId == com.CommunityId).IncludeFlg, new { id = payer.AtriumPayerGroupCode, @class = "checkboxPayer" })</td>
                                }
                                else
                                {
                            <td></td>}
                            }
                            <td>

                                @Html.ActionLink("Select Hospitals", "GetHospitalAssociations", new { id = com.CommunityId }, new { @class = "select-hospitals" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div id="hospitalAssociationModal" align="center">
            This is placeholder content!
        </div>
    </div>
</div>


<environment names="Development">
    <script type="text/javascript" src="~/js/HospitalDischargeAdmin.js" asp-append-version="true"></script>
</environment>
<environment names="Testing,Production,Training">
    <script type="text/javascript" src="~/js/HospitalDischargeAdmin.min.js" asp-append-version="true"></script>
</environment>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

