@model AtriumWebApp.Web.ClinicalOps.Models.IncidentIntervention

@if (Model.PatientIncidentInterventionId == 0)
{
    Model.DataEntryFlg = true;
}

<form asp-action="NewIntervention" asp-controller="IncidentTrackingAdmin">
    <input asp-for="PatientIncidentInterventionName" placeholder="New Intervention Name" />
    <span asp-validation-for="PatientIncidentInterventionName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>