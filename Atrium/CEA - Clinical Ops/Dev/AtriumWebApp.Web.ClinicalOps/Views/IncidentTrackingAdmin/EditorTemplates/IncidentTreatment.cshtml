@model AtriumWebApp.Web.ClinicalOps.Models.IncidentTreatment

@if (Model.PatientIncidentTreatmentId == 0)
{
    Model.DataEntryFlg = true;
}

<form asp-action="NewTreatment" asp-controller="IncidentTrackingAdmin">
    <input asp-for="PatientIncidentTreatmentName" placeholder="New Treatment Name" />
    <span asp-validation-for="PatientIncidentTreatmentName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>