@model AtriumWebApp.Web.ClinicalOps.Models.PatientIncidentLocation

@if (Model.PatientIncidentLocationId == 0)
{
    Model.DataEntryFlg = true;
}

<form asp-action="NewLocation" asp-controller="IncidentTrackingAdmin">
    <input asp-for="PatientIncidentLocationName" placeholder="New Incident Location" />
    <span asp-validation-for="PatientIncidentLocationName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>