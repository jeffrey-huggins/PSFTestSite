@model AtriumWebApp.Web.ClinicalOps.Models.PatientIncidentType

@if(Model.PatientIncidentTypeId == 0)
{
    Model.DataEntryFlg = true;
    Model.ReportFlg = true;
}

<form asp-action="NewType" asp-controller="IncidentTrackingAdmin">
    <input asp-for="PatientIncidentName" placeholder="New Incident Type" />
    <span asp-validation-for="PatientIncidentName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input asp-for="ReportFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>