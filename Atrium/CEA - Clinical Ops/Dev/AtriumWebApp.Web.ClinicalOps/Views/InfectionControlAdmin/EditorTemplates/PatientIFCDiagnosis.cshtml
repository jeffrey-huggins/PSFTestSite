@model AtriumWebApp.Web.ClinicalOps.Models.PatientIFCDiagnosis

@if (Model.PatientIFCDiagnosisId == 0)
{
    Model.DataEntryFlg = true;
}

<form asp-action="NewDiagnosis" asp-controller="InfectionControlAdmin">
    <input asp-for="PatientIFCDiagnosisName" placeholder="New Diagnosis Name" />
    <span asp-validation-for="PatientIFCDiagnosisName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>