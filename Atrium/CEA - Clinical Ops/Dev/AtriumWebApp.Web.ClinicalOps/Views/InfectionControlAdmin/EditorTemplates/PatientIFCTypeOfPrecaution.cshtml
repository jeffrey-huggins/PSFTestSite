@model AtriumWebApp.Web.ClinicalOps.Models.PatientIFCTypeOfPrecaution

@if (Model.PatientIFCTypeOfPrecautionId == 0)
{
    Model.DataEntryFlg = true;
}

<form asp-action="NewPrecaution" asp-controller="InfectionControlAdmin">
    <input asp-for="PatientIFCTypeOfPrecautionName" placeholder="New Incident Location" />
    <span asp-validation-for="PatientIFCTypeOfPrecautionName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>