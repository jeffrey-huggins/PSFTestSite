@model AtriumWebApp.Web.ClinicalOps.Models.SOCEventCatheter
@{
    var catheterSelection = new SelectList((List<SOCCatheterType>)ViewData["CatheterTypes"], "SOCCatheterTypeId", "SOCCatheterTypeName");
}


<div align="center" class="container-fluid" style="width:630px;">
    <h2 class="margin_separator">Event Record</h2>
    <form method="post" id="SaveCatheterForm" asp-controller="StandardsOfCare" asp-action="SaveCatheterEvent" style="display:none;">
        <input type="hidden" asp-for="CurrentPayerId" />
        <input type="hidden" asp-for="PatientId" />
        <input type="hidden" asp-for="RoomId" />
        <input type="hidden" asp-for="SOCEventId" />
        <input type="hidden" asp-for="SOCMeasureId" />
        <input type="hidden" asp-for="OccurredFlg" />
        <input type="hidden" asp-for="ResolvedFlg" />
        <div class="row">
            <div class="col-sm-5">
                Date Occured:
            </div>
            <div class="col-sm-7">
                <input asp-for="OccurredDate" data-rule-no_future_date="true" asp-format="{0:d}" class="isDate" />
                <br />
                <span asp-validation-for="OccurredDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                Date Resolved:
            </div>
            <div class="col-sm-7">
                <input asp-for="ResolvedDate" data-rule-no_future_date="true" data-rule-resolved_greater_initial="true" asp-format="{0:d}" class="isDate" />
                <br />
                <span asp-validation-for="ResolvedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                Catheter Type:
            </div>
            <div class="col-sm-7">
                <select asp-for="SOCCatheterTypeId" asp-items="catheterSelection">
                    <option value="" selected>Select a Catheter Type</option>
                </select>
                <input type="hidden" asp-for="SOCCatheterTypeId" id="hiddenCathType" />
                <br />
                <span asp-validation-for="SOCCatheterTypeId"></span>
            </div>
        </div>
        <div class="row">
            <input class="col-sm-offset-5 col-sm-3" type="submit" id="saveEvent" value="Save" />
        </div>
    </form>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<environment names="Development">
    <script src="~/js/AdditionalValidation.js" asp-append-version="true"></script>
    <script src="~/js/SOC/SOCCatheter.js" asp-append-version="true"></script>
</environment>
<environment names="Testing,Production,Training">
    <script src="~/js/SOC/SOCCatheter.min.js" asp-append-version="true"></script>
</environment>