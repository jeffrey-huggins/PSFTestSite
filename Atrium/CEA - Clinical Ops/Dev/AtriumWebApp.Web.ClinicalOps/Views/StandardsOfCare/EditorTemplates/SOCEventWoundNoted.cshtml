@model SOCEventWoundNoted
@{
    var stageSelection = new SelectList((List<PressureWoundStage>)ViewData["PressureWounds"], "PressureWoundStageId", "PressureWoundStageName");
}
@ViewBag.CurrentUserDisplayName
<form asp-action="SaveWoundNote" asp-controller="StandardsOfCare" method="post" id="saveWoundNoteForm">
    <input type="hidden" asp-for="SOCEventWoundNotedId" id="notedID" />
    <input type="hidden" asp-for="SOCEventId" />
    <div class="container-fluid" style="border-top:solid thin black;">
        <br />
        <div class="row">
            <div class="col-sm-2 text-right">
                Date Noted:
            </div>
            <div class="col-sm-2">
                <input asp-for="NotedDate" class="isDate" asp-format="{0:d}" />
                <br />
                <span asp-validation-for="NotedDate" class="text-danger"></span>
            </div>
            <div class="pressureWound" style="display:none;">
                <div class="col-sm-2 text-right">
                    Stage:
                </div>
                <div class="col-sm-2">
                    <select asp-for="PressureWoundStageId" asp-items="stageSelection">
                        <option selected="selected" value="">Choose a Stage</option>
                    </select>
                    <span asp-validation-for="PressureWoundStageId" class="text-danger"></span>
                    <input type="hidden" asp-for="PressureWoundStageId" />
                </div>
            </div>
            <div class="compositeWound" style="display:none;">
                <div class="col-sm-2 text-right">
                    Progress:
                </div>
                <div class="col-sm-2">
                    <select asp-for="Progress">
                        <option value="Improved">Improved</option>
                        <option selected="selected" value="No Change">No Change</option>
                        <option value="Deteriorated">Deteriorated</option>
                    </select>
                    <span asp-validation-for="Progress" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-2">
                Signature
            </div>
            <div class="col-sm-2">
                <input asp-for="Signature" />
                <span asp-validation-for="Signature"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 text-left">
                Wound Description/TX:
                <br />
                <textarea asp-for="Treatment" rows="4" style="width:100%" data-val-required="The Wound Description field is required."></textarea>
                <span asp-validation-for="Treatment" data-valmsg-replace="true"></span>
            </div>
            <div class="col-sm-4 text-left">
                Measurements(256 max):
                <br />
                <div class="pressureWound" style="display:none;">
                    <div>
                        Length: <input asp-for="LengthNbr" data-rule-range="0,99.9" style="width:75px;" /> cm
                        <br />
                        <span asp-validation-for="LengthNbr"></span>
                    </div>
                    <div>
                        Width: <input asp-for="WidthNbr" data-rule-range="0,99.9" style="width:75px;" /> cm
                        <br />
                        <span asp-validation-for="WidthNbr"></span>
                    </div>
                    <div class="depthHide" style="display:none;">
                        Depth: <input asp-for="DepthNbr" data-rule-range="0,99.9" style="width:75px;" /> cm
                        <br />
                        <span asp-validation-for="DepthNbr"></span>
                    </div>
                </div>
                <div class="compositeWound" style="display:none;">
                    <textarea asp-for="Measurement" rows="4" style="width:100%;"></textarea>
                </div>
            </div>
            <div class="col-sm-4 text-left">
                Drainage (128 max): <input asp-for="Drainage" />
                <textarea asp-for="DrainageDesc" rows="4" style="width:100%; display:none;"></textarea>
                <br />
                <span asp-validation-for="DrainageDesc" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 text-left">
                <div class="pressureWound" style="display:none;">
                    Intervention: Include Nutritional
                </div>
                <div class="compositeWound" style="display:none;">
                    Intervention:
                </div>
                <textarea asp-for="Intervention" rows="4" style="width:100%"></textarea>
                <span asp-validation-for="Intervention" class="text-danger"></span>

            </div>
            <div class="col-sm-3 pressureWound" style="display:none;">
                Relief Device (128 max):
                <br />
                <textarea asp-for="ReliefDevice" rows="4" style="width:100%"></textarea>
            </div>
            <div class="col-sm-2 pressureWound" style="display:none;">
                Status:
                <br />
                <select asp-for="Status">
                    <option value="Healing">Healing</option>
                    <option value="Unchanged" selected="selected">Unchanged</option>
                    <option value="Worsening">Worsening</option>
                </select>
            </div>
            <div class="col-sm-3 pressureWound" style="display:none;">
                Labs/Diagnostics (256 max):
                <br />
                <textarea asp-for="LabDiagnostic" rows="4" style="width:100%"></textarea>
            </div>
        </div>
        <div class="row pressureWound" style="display:none;">
            <div class="col-sm-1 text-right">
                Dietary:
            </div>
            <div class="col-sm-3 text-left">
                <input asp-for="DietaryDate" asp-format="{0:d}" class="isDate" type="text" />
            </div>
            <div class="col-sm-1 text-right">
                Physician:
            </div>
            <div class="col-sm-3 text-left">
                <input asp-for="PhysicianDate" asp-format="{0:d}" class="isDate" type="text" />
            </div>
            <div class="col-sm-1 text-right">
                Family:
            </div>
            <div class="col-sm-3 text-left">
                <input asp-for="FamilyDate" asp-format="{0:d}" class="isDate" type="text" />
            </div>
        </div>
        <div class="row pressureWound" style="display:none;">
            <div class="col-sm-2 text-right">
                Ideal Body Weight:
            </div>
            <div class="col-sm-2 text-left">
                <select asp-for="IdealBodyWeight">
                    <option selected value="At">At</option>
                    <option value="Above">Above</option>
                    <option value="Below">Below</option>
                </select>
            </div>
            <div class="col-sm-2 text-right">
                Actual Weight:
            </div>
            <div class="col-sm-2 text-left">
                <select asp-for="ActualWeight">
                    <option selected value="Stable">Stable</option>
                    <option value="Gaining">Gaining</option>
                    <option value="Losing">Losing</option>
                </select>
            </div>
            <div class="col-sm-2 text-right">
                Food Intake:
            </div>
            <div class="col-sm-2 text-left">
                <select asp-for="FoodIntake">
                    <option selected value="75-100%">75-100%</option>
                    <option value="50-75%">50-75%</option>
                    <option value="Below 50%">Below 50%</option>
                </select>
            </div>
        </div>
        <div class="row pressureWound" style="display:none;">
            <div class="col-sm-2 text-right">
                Skin Turgor:
            </div>
            <div class="col-sm-2 text-left">
                <select asp-for="SkinTurgor">
                    <option selected value="Good">Good</option>
                    <option value="Fair">Fair</option>
                    <option value="Poor">Poor</option>
                </select>
            </div>
            <div class="col-sm-2 text-right">
                Urine:
            </div>
            <div class="col-sm-2 text-left">
                <select asp-for="Urine">
                    <option selected value="Adequate">Adequate</option>
                    <option value="Inadequate">Inadequate</option>
                </select>
            </div>
            <div class="col-sm-2 text-right">
                Pain Level:
            </div>
            <div class="col-sm-2 text-left">
                <select asp-for="PainLevel">
                    <option selected value="None">None</option>
                    <option value="Mild 1-3">Mild 1-3</option>
                    <option value="Moderate 4-6">Moderate 4-6</option>
                    <option value="Severe 7-10">Severe 7-10</option>
                </select>
            </div>
        </div>
    </div>
</form>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>