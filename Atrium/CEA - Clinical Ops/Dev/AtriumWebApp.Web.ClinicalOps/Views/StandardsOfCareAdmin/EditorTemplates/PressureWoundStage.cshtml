@model PressureWoundStage

@if (Model.PressureWoundStageId == 0)
{
    Model.DataEntryFlg = true;
    Model.ReportFlg = true;
}

<form asp-action="NewStage" asp-controller="StandardsOfCareAdmin">
    <input asp-for="PressureWoundStageName" placeholder="New Pressure Wound Stage" />
    <span asp-validation-for="PressureWoundStageName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input asp-for="ReportFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>