@model SOCFallLocation

@if(Model.SOCFallLocationId == 0)
{
    Model.DataEntryFlg = true;
}

<form asp-action="NewLocation" asp-controller="StandardsOfCareAdmin">
    <input asp-for="SOCFallLocationName" placeholder="New Fall Location" />
    <span asp-validation-for="SOCFallLocationName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>