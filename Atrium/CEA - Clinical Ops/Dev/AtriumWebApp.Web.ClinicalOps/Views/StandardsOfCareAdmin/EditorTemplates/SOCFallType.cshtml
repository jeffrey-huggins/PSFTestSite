@model SOCFallType

@if(Model.SOCFallTypeId == 0)
{
    Model.DataEntryFlg = true;
}

<form asp-action="NewType" asp-controller="StandardsOfCareAdmin">
    <input asp-for="SOCFallTypeName" placeholder="New Fall Type" />
    <span asp-validation-for="SOCFallTypeName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>