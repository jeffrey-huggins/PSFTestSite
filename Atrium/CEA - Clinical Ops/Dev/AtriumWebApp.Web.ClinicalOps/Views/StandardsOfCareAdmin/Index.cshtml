        <div id="measuresTab" style="display:none;">
            <table id="Measures" style="width: 400px;">
                <thead>
                    <tr style="font-weight: bold">
                        <th>Measure</th>
                        <th>Sort Order</th>
                        <th>Enable Disable</th>
                        <th>Report Flag</th>@*<th>Occurrance Flag</th><th>Patient Flag</th>*@
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var measure in Model.Measures)
            {
                    <tr id="@measure.SOCMeasureId">
                        <td>@measure.SOCMeasureName</td>
                        <td>@measure.SortOrder</td>
                        <td>@Html.CheckBox("EnableDisable", measure.DataEntryFlg, new { @class = "EnableDisable" })</td>
                        <td>@Html.CheckBox("ReportFlg", measure.ReportFlg, new { @class = "ReportFlg" })</td>
                        @*<td>@Html.CheckBox("OccurranceCalcFlg", measure.OccuranceCalcFlg, new { @class = "Occurrance"})</td>
                            <td>@Html.CheckBox("PatientCalcFlg", measure.PatientCalcFlg, new { @class = "Patient"} )</td>*@
