        <div id="pressureWoundTab">
            <table id="PRWND" style="width: 400px">
                <thead>
                    <tr>
                        <th>Stage</th>
                        <th>Severity Level</th>
                        <th>Sort Order</th>
                        <th>Enable Disable</th>
                        <th>Report Flag</th>
                        <th>Threshold</th>
                        <th>Length Flag</th>
                        <th>Width Flag </th>
                        <th>Depth Flag </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stage in Model.PressureWoundStages)
            {
                        <tr id="@stage.PressureWoundStageId">
                            <td>@stage.PressureWoundStageName</td>
                            <td>
                                @Html.DropDownListFor(s => stage.SeverityLevelNbr, new SelectList(
                   new[] {
                       new SelectListItem { Text = "Unknown", Value = null },
                       new SelectListItem { Text = "0", Value = "0" },
                       new SelectListItem { Text = "1", Value = "1" },
                       new SelectListItem { Text = "2", Value = "2" },
                       new SelectListItem { Text = "3", Value = "3" },
                       new SelectListItem { Text = "4", Value = "4" }


                   }, "Value", "Text", stage.SeverityLevelNbr), new { @class = "severity-level" })

                                @*@Html.DropDownList("SeverityLevelNbr", new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "Unknown", Value = null },
                                        new SelectListItem { Text = "0", Value = "0" },
                                        new SelectListItem { Text = "1", Value = "1" },
                                        new SelectListItem { Text = "2", Value = "2" },
                                        new SelectListItem { Text = "3", Value = "3" },
                                        new SelectListItem { Text = "4", Value = "4" }

                                    }, new { @class= "severity-level" })*@
                                @*@Html.Hidden("severityLevel", stage.SeverityLevelNbr)*@
                            </td>



                            <td>@stage.SortOrder</td>
                            <td>@Html.CheckBox("EnableDisable", stage.DataEntryFlg, new { @class = "EnableDisable" })</td>
                            <td>@Html.CheckBox("ReportFlg", stage.ReportFlg, new { @class = "ReportFlg" })</td>
                            <td>@Html.CheckBox("ThresholdFlg", stage.IncludeInThresholdFlg, new { @class = "WoundFlg", data_woundflg = 0, data_woundflg_name = "Threshold" })</td>
                            <td>@Html.CheckBox("LengthFlg", stage.LengthFlg, new { @class = "WoundFlg", data_woundflg = 1, data_woundflg_name = "Length Flag" })</td>
                            <td>@Html.CheckBox("WidthFlg", stage.WidthFlg, new { @class = "WoundFlg", data_woundflg = 2, data_woundflg_name = "Width Flag" })</td>
                            <td>@Html.CheckBox("DepthFlg", stage.DepthFlg, new { @class = "WoundFlg", data_woundflg = 3, data_woundflg_name = "Depth Flag" })</td>

                            <td></td>
                            <td><a class="delete" href="">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.EditorFor(a => a.NewPressureWound)
            <div id="hiddenServerityLevels" style="display:none;">
                @Html.DropDownList("test", new SelectList(
                   new[] {
