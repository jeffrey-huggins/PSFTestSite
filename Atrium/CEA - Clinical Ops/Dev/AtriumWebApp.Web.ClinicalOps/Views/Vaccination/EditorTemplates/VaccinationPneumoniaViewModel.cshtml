@model VaccinationPneumoniaViewModel
@{ 
    var vaccineTypes = new SelectList((List<VaccinePneumoniaType>)ViewData["PneumoniaType"], "VaccinePneumoniaTypeId", "VaccinePneumoniaTypeName");
}
<div align="center" class="container-fluid" style="min-width:660px;">
    <h2 class="margin_separator">Pneumonia Vaccination</h2>
    <form method="post" id="savePneumoniaVaccine" asp-controller="Vaccination" asp-action="SavePneumoniaVaccine">
        <input type="hidden" asp-for="CurrentPayerId" />
        <input type="hidden" asp-for="PersonId" />
        <input type="hidden" asp-for="RoomId" />
        <input type="hidden" asp-for="VaccineId" />
        <input type="hidden" asp-for="VaccineTypeId" />
        <input type="hidden" asp-for="IsEmployee" />
        <hr />
        <div class="row">
            <div class="col-sm-3 text-right">
                Vaccine Type:
            </div>
            <div class="col-sm-3 text-left">
                <select asp-for="VaccinePneumoniaTypeId" asp-items="vaccineTypes" data-rule-unknwon_prior_to_admission_required="true">
                    <option selected="selected" value="">Select a Type</option>
                </select>
                <br />
                <span asp-validation-for="VaccinePneumoniaTypeId" class="text-danger"></span>
            </div>
            <div class="col-sm-3 text-right">
                Consent Signed:
            </div>
            <div class="col-sm-3 text-left">
                <input asp-for="ConsentSignedFlg" />
                <br />
                <span asp-validation-for="ConsentSignedFlg" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 text-right">
                Date:
            </div>
            <div class="col-sm-3 text-left">
                <input asp-for="VaccineDate" type="text" asp-format="{0:d}" data-rule-no_future_date="true" class="isDate" />
                <br />
                <span asp-validation-for="VaccineDate" class="text-danger"></span>
            </div>
            <div class="col-sm-3 text-right">
                Offered and Refused:
            </div>
            <div class="col-sm-3 text-left">
                <div class="row">
                    <div class="col-sm-3">
                        <input asp-for="OfferedRefusedFlg" />
                    </div>
                    <div class="col-sm-9">
                        <input asp-for="OfferedRefusedDate" asp-format="{0:d}" class="isDate refusedDate" type="text" style="display:none;" />
                    </div>
                </div>
                <span asp-validation-for="OfferedRefusedFlg" class="text-danger"></span>
                <span asp-validation-for="OfferedRefusedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 text-right">
                Next Due Date:
            </div>
            <div class="col-sm-3 text-left">
                <input asp-for="NextDueDate" asp-format="{0:d}" class="isDate" type="text" />
                <br />
                <span asp-validation-for="NextDueDate" class="text-danger"></span>
            </div>

            <div class="col-sm-3 text-right">
                Prior to Admission:
            </div>
            <div class="col-sm-3 text-left">
                <input asp-for="ImmunizationPriorToAdmissionFlg" />
                <span asp-validation-for="ImmunizationPriorToAdmissionFlg" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 text-right">
                Lot #:
            </div>
            <div class="col-sm-3 text-left">
                <input asp-for="LotNumber" />
                <span asp-validation-for="LotNumber" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12 text-center">
                <input type="submit" id="saveVaccine" value="Save" />
            </div>
        </div>
    </form>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<environment names="Development">
    <script src="~/js/AdditionalValidation.js" asp-append-version="true"></script>
    <script src="~/js/Vaccination/Pneumonia.js" asp-append-version="true"></script>
</environment>
<environment names="Testing,Production,Training">
    <script src="~/js/AdditionalValidation.min.js" asp-append-version="true"></script>
    <script src="~/js/Vaccination/Pneumonia.min.js" asp-append-version="true"></script>
</environment>
