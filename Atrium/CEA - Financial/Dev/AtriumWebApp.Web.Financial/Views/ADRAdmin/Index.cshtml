@model AtriumWebApp.Models.ViewModel.AdminViewModel
@using AtriumWebApp.Web.Base.Library
@{
    ViewBag.Title = "ADR Admin Page";
}

<style type="text/css">
    .dataTables_scrollBody {
        overflow: auto;
        height: auto !important;
        max-height: 300px;
        width: 100%;
    }

    .content-wrapper {
        max-width: 1366px;
    }

    .dataTables_wrapper {
        border: solid thin black;
    }

    #admin-body {
        width: 100%;
    }
</style>


<h2 style="padding-bottom: 30px;">@ViewBag.Title</h2>

@using (Html.BeginForm("SaveLookback", "ADRAdmin", FormMethod.Post, new { id = "SaveLookback" }))
{
    <table>
        <thead>
            <tr style="font-weight: bold">
                <th>Lookback Days</th>
            </tr>
        </thead>
        <tr>
            @{ 
                int ADRLookbackDays;
                Context.Session.TryGetObject("ADRLookbackDays", out ADRLookbackDays);
            }
            <td>@Html.Label("Adjust Lookback Days:")</td>
            <td>@Html.TextBox("LookbackDays", ADRLookbackDays)</td>
            <td>
                <input id="submit" name="submit" type="submit" value="Update" />
            </td>
        </tr>
    </table>
}
<div id="tabs">
    <ul>
        <li>
            <a href="#CommunityTab">Communities</a>
        </li>
    </ul>
    <div id="admin-body">
        <div id="CommunityTableWrapper">
            <table id="CommunityTable">
                <thead>
                    <tr>
                        <th>Facility</th>
                        <th>State</th>
                        <th>Region</th>
                        <th>Use in Display</th>
                        <th>Report Flag</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var com in Model.Communities)
            {
                        <tr>
                            <td>@com.CommunityShortName</td>
                            <td>@com.StateCd</td>
                            <td>@Model.Regions.Single(r => r.RegionId == com.RegionId).RegionName</td>
                            <td>@Html.CheckBoxFor(x => x.ApplicationCommunityInfos.Single(aci => aci.CommunityId == com.CommunityId).DataEntryFlg, new { id = com.CommunityId, @class = "checkbox" })</td>
                            <td>@Html.CheckBoxFor(x => x.ApplicationCommunityInfos.Single(aci => aci.CommunityId == com.CommunityId).ReportFlg, new { id = com.CommunityId, @class = "checkboxReport" })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<environment names="Development">
    <script src="~/js/ADRAdmin.js" asp-append-version="true"></script>
</environment>
<environment names="Testing,Production,Training">
    <script src="~/js/ADRAdmin.min.js" asp-append-version="true"></script>
</environment>
