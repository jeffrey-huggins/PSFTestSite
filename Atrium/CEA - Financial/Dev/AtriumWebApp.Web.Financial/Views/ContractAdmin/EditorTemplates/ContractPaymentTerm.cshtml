@model AtriumWebApp.Models.ContractPaymentTerm

@if (Model.Id == 0)
{
    Model.IsDataEntry = true;
    Model.IsReportable = true;
}

<form asp-action="CreatePaymentTerm" asp-controller="ContractAdmin" >
    <input asp-for="Name" placeholder="New Payment Term" />
    <span asp-validation-for="Name" class="text-danger"></span>
    <input asp-for="IsDataEntry" hidden="hidden" />
    <input asp-for="IsReportable" hidden="hidden" />
    <input type="submit" value="Add" id="newPaymentTerm" />
</form>