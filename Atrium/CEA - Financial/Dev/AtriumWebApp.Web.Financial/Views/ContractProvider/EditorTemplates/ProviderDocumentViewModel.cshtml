@model AtriumWebApp.Models.ViewModel.ProviderDocumentViewModel
<tr>
    <td>@Html.TextBoxFor(m => m.Description, new { size = "10", data_field = "Description" })</td>
    <td>@Html.TextBoxFor(m => m.SavedDate, "{0:MM/dd/yyyy}", new { size = "10", data_field = "SavedDate", @class="isDate" })</td>
    
    <td>@if (!(Model.FileName == null || Model.ContentType == null))
        {
            @Html.ActionLink(Model.FileName, "StreamDocument", new { id = Model.Id });
        }
        else
        {
            <input type="file" name="document" id="document" data-field="Document" class="fileSelection" />;
        }       
    </td>
    <td>
        <button type="button" class="delete-item">&times;</button>
        @Html.HiddenFor(m => m.Id, new { data_field = "Id" })
        @Html.HiddenFor(m => m.FileName, new { data_field = "FileName" })
        @Html.HiddenFor(m => m.ContentType, new { data_field = "ContentType" })
        @Html.HiddenFor(m => m.ContractProviderId, new { data_field = "ContractProviderId" })
    </td>
</tr>