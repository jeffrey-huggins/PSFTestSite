@model AtriumWebApp.Web.Financial.Models.ViewModel.PurchaseOrderDocumentViewModel
<tr>
    <td>
        @if (!(Model.FileName == null || Model.ContentType == null))
        {
            @Html.ActionLink(Model.FileName, "StreamPurchaseOrderDocument", new { id = Model.Id });
        }
        else
        {      
            <input type="file" name="document" id="document" data-field="Document" class="fileSelection" multiple="multiple" />
        } 
    </td>
    <td>
        <button type="button" class="delete-item">&times;</button>
        @Html.HiddenFor(m => m.Id, new { data_field = "Id" })
        @Html.HiddenFor(m => m.PurchaseOrderId, new { data_field = "PurchaseOrderId" })
        @Html.HiddenFor(m => m.FileName, new { data_field = "FileName" })
        @Html.HiddenFor(m => m.ContentType, new { data_field = "ContentType" })
    </td>
</tr>