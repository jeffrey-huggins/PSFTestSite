@model AtriumWebApp.Models.ViewModel.AdminHomeViewModel
@{
    ViewBag.Title = "Admin Page";
}

<div id="Info">

</div>

<div class="float-left">
    <div class="container_12">
        <div class="grid_2 bold">Server Name:</div>
        <div class="grid_2">@Model.ServerName</div>
    </div>
    <div class="container_12">
        <div class="grid_2 bold">Database Name:</div>
        <div class="grid_2">@Model.DatabaseName</div>
    </div>

    <ul id="admin-links">
        <li><a href="~/SystemAdmin/">System Admin Page</a></li>
        <li><a href="~/UserAdmin/">User Access Page</a></li>
        <li><a href="~/AccessAdmin/">General Access Page</a></li>
    </ul>
</div>
<script>
    function loadStatus() {
        $("#Info").load(path + "Admin/GetPackageStatus", function () {
            setTimeout(loadStatus, 1000);
        });

    }

    loadStatus();

    $("#Info").on("click", ".jobStart", function (e) {
        e.preventDefault();
        $.ajax({
            url: this.href,
            success: function (status) {
                if (status == 0) {
                    alert("Something went wrong, try again.");

                }
                else {
                }

            }
        })
    });
</script>