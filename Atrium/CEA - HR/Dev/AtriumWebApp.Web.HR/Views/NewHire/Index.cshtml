@model AtriumWebApp.Web.HR.Models.ViewModel.NewHireSideBar
@{
    ViewData["Title"] = "New Hire";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <h2>New Hire Checklist</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2" id="sidebar">
            @Html.EditorFor(a => a)
        </div>
        <div class="col-sm-10">
            <div class="row">
                <div id="newHireChecklistSection">

                </div>
            </div>
            <div class="row">
                <div id="newHireListSection">

                </div>
            </div>
        </div>
    </div>
</div>

<environment names="Development">
    <script src="~/js/NewHire.js" asp-append-version="true"></script>
</environment>
<environment names="Testing,Production,Training">
    <script src="~/js/NewHire.min.js" asp-append-version="true"></script>
</environment>