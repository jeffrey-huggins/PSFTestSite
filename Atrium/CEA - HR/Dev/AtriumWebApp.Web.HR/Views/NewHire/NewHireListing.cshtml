@model List<AtriumWebApp.Web.HR.Models.EmployeeNewHire>

<table id="newHireTable">
    <thead>
        <tr>
            <th>
                Hire Date
            </th>
            <th>
                Completed
            </th>
            <th>
                @*Edit*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var hireChecklist in Model)
        {
            <tr>
                <td>
                    @hireChecklist.CurrentHireDate.ToString("d")
                </td>
                <td>
                    @if (hireChecklist.CompletedFlg)
                    {
                        <div class="glyphicon glyphicon-ok text-success"></div>

                    }
                    else
                    {
                        <div class="glyphicon glyphicon-remove text-danger"></div>

                    }
                </td>
                <td>
                    @Html.ActionLink("Edit","EmployeeChecklist", new { @employeeNewHireId = hireChecklist.EmployeeNewHireId }, new { @class = "Edit" })
                </td>
            </tr>

        }
    </tbody>
</table>