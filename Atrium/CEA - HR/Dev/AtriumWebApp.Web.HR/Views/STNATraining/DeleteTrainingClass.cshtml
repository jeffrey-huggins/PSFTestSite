@model AtriumWebApp.Web.HR.Models.STNATrainingClass

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>STNATrainingFacilityInteraction</legend>
    
    @Html.HiddenFor(model => model.STNATrainingClassesId)
    <div class="editor-field">
        @Html.HiddenFor(model => model.STNATrainingFacilityId)
        @Html.DropDownList("STNATrainingFacilityList", ViewData["STNATrainingFacilityList"] as SelectList, new { @disabled = true })
    </div>

    <div class="editor-field">
        @Html.LabelFor(model => model.StartDate) <br />
        @*@Html.EditorFor(model => model.StartDate, new { @class = "isDate" })*@
        @String.Format("{0:d}", Model.StartDate)
    </div>

    <div class="editor-field">
        @Html.LabelFor(model => model.EndDate) <br />
        @*@Html.EditorFor(model => model.EndDate, new { @class = "isDate" })*@
        @String.Format("{0:d}", Model.EndDate)
    </div>

    <div class="editor-field">
        @Html.LabelFor(model => model.ClassType) <br />
        @Html.DropDownListFor(model => model.ClassType, new List<SelectListItem>
        {
            new SelectListItem { Text = "Daytime", Value = "Daytime"},
            new SelectListItem { Text = "Evening", Value = "Evening" },
            new SelectListItem { Text = "Weekend", Value = "Weekend" }
        }, new { @disabled = true })
    </div>

    <div class="editor-field">
        @Html.LabelFor(model => model.StudentsInClassCnt) <br />
        @Html.DisplayFor(model => model.StudentsInClassCnt)
    </div>

    <div class="editor-field">
        @Html.LabelFor(model => model.StudentsHiredCnt) <br />
        @Html.DisplayFor(model => model.StudentsHiredCnt)
    </div>

    <div class="editor-field">
        @Html.LabelFor(model => model.TrainerName) <br />
        @Html.DisplayFor(model => model.TrainerName)
    </div>



</fieldset>
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
