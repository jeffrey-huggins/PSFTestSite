@model EquipmentMaintenancePlan

<form asp-action="SaveMaintenancePlan" method="post" asp-controller="EquipmentManagement" id="savePlanForm">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 text-center">
                <h2>Maintenance Plan</h2>
            </div>
        </div>
        
        <hr />
        <div class="row" style="display:none;">
            <input type="hidden" asp-for="NextInspectionDate" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-sm-2">
                <label asp-for="EquipmentId"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="EquipmentId" class="form-control" />
                <span asp-validation-for="EquipmentId" class="text-danger"></span>
            </div>
            <div class="col-sm-2">
                <label asp-for="EquipmentMaintenancePlanId"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="EquipmentMaintenancePlanId" class="form-control" />
                <span asp-validation-for="EquipmentMaintenancePlanId" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-sm-9">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="StartDate"></label>
            </div>
            <div class="col-sm-4">
                <input asp-for="StartDate" class="form-control date-picker" type="text" asp-format="{0:MM/dd/yyyy}" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-sm-2">
                <label asp-for="Interval"></label>
            </div>          
            <div class="col-sm-4">
                <select asp-for="Interval" class="form-control">
                    <option value="Daily">
                        Daily
                    </option>
                    <option value="Weekly">
                        Weekly
                    </option>
                    <option value="Monthly">
                        Monthly
                    </option>
                    <option value="Quarterly">
                        Quarterly
                    </option>
                    <option value="Yearly">
                        Yearly
                    </option>
                </select>
                <span asp-validation-for="Interval" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input id="planSubmit" type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script>
    $("#redirectUrl").val(location.href);
    $.validator.setDefaults({ ignore: [] });
    $("#savePlanForm").removeData("validator");
    $("#savePlanForm").removeData("unobtrusiveValidation");
    $.validator.unobtrusive.parse($("#savePlanForm"));
    $("#savePlanForm").validate();
</script>