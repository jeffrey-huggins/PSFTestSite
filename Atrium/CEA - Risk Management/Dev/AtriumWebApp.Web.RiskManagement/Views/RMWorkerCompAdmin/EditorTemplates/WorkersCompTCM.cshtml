@model AtriumWebApp.Web.RiskManagement.Models.WorkersCompTCM

@if (Model.TCMId == 0)
{
    Model.DataEntryFlg = true;

}

<form asp-action="SaveNewTCM" asp-controller="RMWorkerCompAdmin">
    <input asp-for="TCMName" placeholder="TCM Name" />
    <span asp-validation-for="TCMName" class="text-danger"></span>
    <input asp-for="DataEntryFlg" hidden="hidden" />
    <input type="submit" value="Add" />
</form>