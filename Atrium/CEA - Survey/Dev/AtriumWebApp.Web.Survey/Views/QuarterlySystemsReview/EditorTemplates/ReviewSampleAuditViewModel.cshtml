@model AtriumWebApp.Web.Survey.Models.ViewModel.ReviewSampleAuditViewModel
<div class="container_16">
    @if (Model.IsResidentSample)
    {
    <div class="grid_8">
        <h3>@Model.FullName</h3>
    </div>
    <div class="grid_4">
        <strong>Unit:</strong> @Model.Unit
    </div>
    <div class="grid_4">
        <strong>Room:</strong> @Model.Room
    </div>
    }
    else
    {
    <div class="grid_16">
        <h3>@Model.SectionName</h3>
    </div>
    }
</div>
<div class="container_16">
    <div class="grid_14">
        <h4>Metric</h4>
    </div>
    <div class="grid_2">
        <h4>Compliant?</h4>
    </div>
</div>
@Html.HiddenFor(m => m.Id)
@for (int i = 0; i < Model.Answers.Count; i++)
{
    var answerDivClass = i % 2 == 0 ? "even" : "odd";
<div class="container_16 Answer @(answerDivClass)">
    @Html.HiddenFor(m => m.Answers[i].Id)
    <div class="grid_14">
        @Model.Answers[i].Text
    </div>
    <div class="grid_2">
        @Html.CheckBoxFor(m => m.Answers[i].IsCompliant)
    </div>
</div>
}
<br />
<div class="container_16">
    <div class="grid_16">Comments:</div>
</div>
<div class="container_16 margin_separator">
    <div class="grid_16">@Html.TextAreaFor(m => m.Comments, new { cols = 50 })</div>
</div>