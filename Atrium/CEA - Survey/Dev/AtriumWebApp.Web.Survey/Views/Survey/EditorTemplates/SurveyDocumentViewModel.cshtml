@model AtriumWebApp.Web.Survey.Models.ViewModel.SurveyDocumentViewModel
<tr>
    <td>
        @if (!(Model.FileName == null || Model.ContentType == null))
        {
            @Html.ActionLink(Model.FileName, "StreamSurveyDocument", new { id = Model.Id });
        }
        else
        {
            <input type="file" name="document" id="document" data-field="Document" class="fileSelection" />
        }
    </td>
    <td>
        <button type="button" class="delete-item">&times;</button>
        @Html.HiddenFor(m => m.Id, new { data_field = "Id" })
        @Html.HiddenFor(m => m.SurveyId, new { data_field = "SurveyId" })
        @Html.HiddenFor(m => m.SurveyCycleId, new { data_field = "SurveyCycleId" })
        @Html.HiddenFor(m => m.FileName, new { data_field = "FileName" })
        @Html.HiddenFor(m => m.ContentType, new { data_field = "ContentType" })
    </td>
</tr>