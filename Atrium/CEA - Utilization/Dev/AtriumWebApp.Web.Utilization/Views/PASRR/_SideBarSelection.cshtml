@using AtriumWebApp.Models;
<section class="left-column-picker" style="height: 500px">
    @{
        string PASRRLookbackDate;
        Context.Session.TryGetObject("PASRRLookbackDate", out PASRRLookbackDate);
        string PASRRCurrentFacility;
        Context.Session.TryGetObject("PASRRCurrentFacility", out PASRRCurrentFacility);
        string PASRRCurrentFacilityStateCode;
        Context.Session.TryGetObject("PASRRCurrentFacilityStateCode", out PASRRCurrentFacilityStateCode);
        string CensusDateInvalid;
        Context.Session.TryGetObject("CensusDateInvalid", out CensusDateInvalid);
        string CensusDateInFuture;
        Context.Session.TryGetObject("CensusDateInFuture", out CensusDateInFuture);
        IList<Community> PASRRFacilityList;
        Context.Session.TryGetObject("PASRRFacilityList", out PASRRFacilityList);
        IList<Patient> PASRRResidentList;
        Context.Session.TryGetObject("PASRRResidentList", out PASRRResidentList);
        string PASRRCurrentResidentIdString;
        Context.Session.TryGetObject("PASRRCurrentResidentIdString", out PASRRCurrentResidentIdString);
        string PASRRCurrentResidentName;
        Context.Session.TryGetObject("PASRRCurrentResidentName", out PASRRCurrentResidentName);
        string PASRRCurrentResidentFacility;
        Context.Session.TryGetObject("PASRRCurrentResidentFacility", out PASRRCurrentResidentFacility);
        string PASRRCurrentResidentRoom;
        Context.Session.TryGetObject("PASRRCurrentResidentRoom", out PASRRCurrentResidentRoom);
        string PASRRCurrentResidentBirthdate;
        Context.Session.TryGetObject("PASRRCurrentResidentBirthdate", out PASRRCurrentResidentBirthdate);
        string PASRRCurrentResidentAdmitDate;
        Context.Session.TryGetObject("PASRRCurrentResidentAdmitDate", out PASRRCurrentResidentAdmitDate);
        string PASRRCurrentResidentCensusDate;
        Context.Session.TryGetObject("PASRRCurrentResidentCensusDate", out PASRRCurrentResidentCensusDate);
    }

    @using (Html.BeginForm("Lookback", "PASRR", FormMethod.Post, new { id = "Lookback" }))
    {
        @Html.Label("Last Census Date:")<br />
        @Html.TextBox("LookbackDate", PASRRLookbackDate, new { @class = "dateUS", size = "10" })
        @Html.Hidden("returnUrl", Context.UrlPath());
        @Html.Hidden("CurrentCommunity", PASRRCurrentFacility)
        @Html.Hidden("CurrentCommunityStateCode", PASRRCurrentFacilityStateCode)
        <input type="submit" value="Update" onclick="" /> 
    }
    @Html.Hidden("CensusDateInvalid", CensusDateInvalid)
    @Html.Hidden("CensusDateInFuture", CensusDateInFuture)
    @using (Html.BeginForm("SideDDL", "PASRR", FormMethod.Post, new { id = "SideDDL" }))
    {
        @Html.Label("Community:")<br />
        @Html.DropDownList("Communities", PASRRFacilityList as SelectList, new { id = "Communities" })
        <br />
        <br />
        @Html.Label("Resident:")<br />
        @Html.DropDownList("Residents", PASRRResidentList as SelectList, "Select a Resident", new { id = "Residents", onselectedindexchanged = "this.form.submit();" })
        <br />
        @Html.Hidden("returnUrl", Context.UrlPath());
    }

    @Html.Hidden("CurrentResidentId", PASRRCurrentResidentIdString)

    @if (!Context.Session.Contains("PASRRCurrentResidentName"))
    {
        <br />
        <div style="color: red; font-weight: bold;">Please choose a Resident</div>
    }
    <br />@Html.Label("", "Current Resident", new { style = "font-weight: bold" })
    <p>
        Name/Community:
        <br />@PASRRCurrentResidentName
        <br />@PASRRCurrentResidentFacility
    </p>
    <p>Rm#: @PASRRCurrentResidentRoom</p>
    <p>Birthdate: @PASRRCurrentResidentBirthdate</p>
    <p>Admit Date: @PASRRCurrentResidentAdmitDate</p>
    <p>Last Census Date: @PASRRCurrentResidentCensusDate</p>
    @*<p>
        Admission Diagnosis:<br />
        @PASRRCurrentResidentAdmissionDiagnosis
    </p>
    <p>
        Diagnosis:
        <br />
        1. @PASRRCurrentResidentDiagnosis1
        <br />
        2. @PASRRCurrentResidentDiagnosis2
        <br />
        3. @PASRRCurrentResidentDiagnosis3
    </p>*@
</section>

<script type="text/javascript">
    $(document).ready(function () {
        $("#LookbackDate").datepicker({
            beforeShow: function (textbox, instance) {
                instance.dpDiv.css({
                    marginTop: '10px',
                    marginLeft: '0px'
                });
            }
        });

        $(function () {
            if ($("#CensusDateInvalid").val() == "1") {
                alert("Error: Please enter a valid Last Census Date (mm/dd/yyyy)");
            }
            if ($("#CensusDateInFuture").val() == "1") {
                alert("Error: You can not have a Census date that is in the future");
            }
        });

        var currentCommunity = $("#CurrentCommunity").val();
        $("#Communities").val(currentCommunity);

        var currentResident = $("#CurrentResidentId").val();
        $("#Residents").val(currentResident);

        $("#Residents").change(function () {
            var resident = $("#Residents option:selected").val();
            if (resident != "") {
                $("#SideDDL").submit();
            }
        });

        $("#Communities").change(function () {
            ShowProgress();
            $.post(path + "/Base/ChangeCommunityForResident", { appCode: "PASRR", facilityId: $("#Communities option:selected").val() }).done(function () {
                window.location.reload();
            });
        });
    });
</script>