@model AtriumWebApp.Web.Utilization.Models.ViewModel.PELIAdminViewModel
@{
    ViewBag.Title = "PELI Admin Page";
}

<style type="text/css">
    .dataTables_scrollBody {
        overflow: auto;
        height: auto !important;
        max-height: 300px;
        width: 100%;
    }

    .content-wrapper {
        max-width: 1366px;
    }

    .dataTables_wrapper {
        border: solid thin black;
    }
</style>

<h2 id="title" style="margin-left: 200px">Preferences for Everyday Living Inventory Admin Page</h2>
@using (Html.BeginForm("SaveLookback", "PELIAdmin", FormMethod.Post, new { id = "SaveLookback" }))
{
    <table>
        <thead>
            <tr style="font-weight: bold">
                <th>Lookback Days</th>
            </tr>
        </thead>
        <tr>
            <td>@Html.Label("Adjust Lookback Days:")</td>
            @{
                string PELILookbackDays;
                Context.Session.TryGetObject("PELILookbackDays", out PELILookbackDays);
            }
            <td>@Html.TextBox("LookbackDays", PELILookbackDays, new { @style = "width: 35px;", maxlength = "3" })</td>
            <td><input id="submit" name="submit" type="submit" value="Update" /></td>
        </tr>
    </table>
}
<div id="tabs" style="min-height:500px;">
    <ul>
        <li>
            <a href="#communityTab">Communities</a>
        </li>
        <li>
            <a href="#reasonTab">Reasons</a>
        </li>
    </ul>
    <div id="communityTab">
        <table id="CommunityTable">
            <thead>
                <tr>
                    <th>Facility</th>
                    <th>State</th>
                    <th>Region</th>
                    <th>Use in Display</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var com in Model.AdminViewModel.Communities.OrderByDescending(c => c.IsCommunityFlg).ThenBy(c => c.CommunityShortName))
            {
                    <tr id="@com.CommunityId">
                        <td>@com.CommunityShortName</td>
                        <td>@com.StateCd</td>
                        <td>@Model.AdminViewModel.Regions.Single(r => r.RegionId == com.RegionId).RegionName</td>
                        <td>@Html.CheckBoxFor(m => m.AdminViewModel.ApplicationCommunityInfos.Single(aci => aci.CommunityId == com.CommunityId).DataEntryFlg, new { id = com.CommunityId, @class = "checkbox" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div id="reasonTab">
        <table id="PELITypes">
            <thead>
                <tr>
                    <th>Reason Description</th>
                    <th>Sort Order</th>
                    <th>Enable Disable</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PELITypes)
            {
                    <tr id="@item.Id">
                        <td>@item.Description</td>
                        <td>@item.SortOrder</td>
                        <td>@item.DataEntryFlg</td>
                        <td><a class="edit" href="">Edit</a></td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.EditorFor(a => a.NewPELIType, "", "")
    </div>
</div>


<environment names="Development">
    <script src="~/js/PELIAdmin.js" asp-append-version="true"></script>
</environment>
<environment names="Testing,Production,Training">
    <script src="~/js/PELIAdmin.min.js" asp-append-version="true"></script>
</environment>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
